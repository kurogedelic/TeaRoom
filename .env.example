# TeaRoom 2.0 Environment Configuration
# Copy this file to .env and configure for your deployment

# Server Configuration
NODE_ENV=production
PORT=9000
HOST=0.0.0.0

# Data Storage Paths
TEAROOM_DATA_PATH=/app/data
DATABASE_PATH=/app/data/database/tearoom.db
UPLOADS_PATH=/app/data/uploads
LOGS_PATH=/app/data/logs

# Claude CLI Configuration
CLAUDE_CLI_PATH=claude
CLAUDE_CLI_TIMEOUT=15000
CLAUDE_MAX_RETRIES=3

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Auto Conversation Settings
AUTO_CONVERSATION_ENABLED=true
AUTO_CONVERSATION_INTERVAL=300000
AUTO_CONVERSATION_MIN_DELAY=60000
AUTO_CONVERSATION_MAX_DELAY=600000

# Security Settings
SESSION_SECRET=your-random-session-secret-here
UPLOAD_MAX_SIZE=5242880
ALLOWED_ORIGINS=*

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_MAX_FILES=5
LOG_MAX_SIZE=10485760

# Performance Settings
MAX_LISTENERS=20
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Feature Flags
ENABLE_AUTO_CHAT=true
ENABLE_SEARCH=true
ENABLE_HEALTH_MONITORING=true
ENABLE_ERROR_REPORTING=true