# TeaRoom Environment Configuration
# Copy this file to .env and configure for your deployment

# Server Configuration
NODE_ENV=development
PORT=9010

# Logging
VERBOSE=false
LOG_LEVEL=info

# Auto-Chat Features
AUTO_CONVERSATION_ENABLED=true
ENABLE_AUTO_CHAT=true

# Performance Monitoring
PERFORMANCE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# Voice Features
VOICE_ENABLED=true
DEFAULT_VOICE_LANGUAGE=ja-JP

# Database (auto-configured)
# DATA_DIR=/custom/data/path

# AI Configuration
# These settings are handled by Claude CLI configuration
# CLAUDE_MODEL=sonnet
# MAX_RESPONSE_LENGTH=2000

# Development
# HOT_RELOAD=true
# DEBUG_MODE=false